<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/temperatureContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/weatherIcon"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.MediumGray"
            app:layout_constraintTop_toTopOf="@id/maxTemperatureView"
            app:layout_constraintBottom_toBottomOf="@id/maxTemperatureView"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            tools:text="max"
            android:text="@string/max" />

        <TextView
            android:id="@+id/titleMin"
            style="@style/Text.MediumGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/minTemperatureView"
            app:layout_constraintBottom_toBottomOf="@id/minTemperatureView"
            app:layout_constraintEnd_toEndOf="@id/titleMax"
            android:textSize="14sp"
            tools:text="min"
            android:text="@string/min" />

        <TextView
            android:id="@+id/maxTemperatureView"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/titleMax"
            android:layout_marginStart="8dp"
            tools:text="+25°C"
            android:text='@{String.format("%s°C", viewModel.dayTemperatureForDate)}' />

        <TextView
            android:id="@+id/minTemperatureView"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/maxTemperatureView"
            app:layout_constraintStart_toStartOf="@id/maxTemperatureView"
            tools:text="+16°C"
            android:text='@{String.format("%s°C", viewModel.nightTemperatureForDate)}' />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/temperatureContainer"
        android:layout_marginStart="16dp"
        tools:src="@drawable/icon_cloud_gray" />

    <TextView
        android:id="@+id/descriptionView"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weatherIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="14sp"
        tools:text="облачно с прояснениями" />

    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/weatherIcon"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon"
        app:layout_constraintStart_toStartOf="@id/temperatureContainer"
        app:layout_constraintEnd_toEndOf="@id/weatherIcon"
        android:indeterminate="true"
        android:indeterminateTint="@color/app_blue"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>