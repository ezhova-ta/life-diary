<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toos="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.lifediary.adapters.CalendarEventListAdapter.CalendarEventListItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/circleIcon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="@id/nameView"
            app:layout_constraintBottom_toBottomOf="@id/nameView"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/icon_album_orange" />

        <TextView
            android:id="@+id/nameView"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/circleIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="2dp"
            android:textSize="16sp"
            android:text="@{viewModel.event.name}"
            toos:text="День рождения маман" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>