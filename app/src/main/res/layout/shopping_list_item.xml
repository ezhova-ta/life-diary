<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.lifediary.adapters.ShoppingListAdapter.ShoppingListItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_shopping_list_item">

        <TextView
            android:id="@+id/titleView"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/controls"
            app:layout_constraintBottom_toBottomOf="@id/controls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/controls"
            android:layout_marginEnd="10dp"
            android:gravity="start|center_vertical"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="18sp"
            tools:text="Масло сливочное 2шт."
            android:text="@{viewModel.shoppingListItem.text}" />

        <View
            android:id="@+id/crossOutLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="@id/titleView"
            app:layout_constraintBottom_toBottomOf="@id/titleView"
            app:layout_constraintStart_toStartOf="@id/titleView"
            app:layout_constraintEnd_toEndOf="@id/titleView"
            android:background="@color/black_opacity_40"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controls"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:id="@+id/setHighPriorityButtonContainer"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <ImageView
                    android:id="@+id/setHighPriorityButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_high_priority_gray" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/deleteButtonContainer"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="@id/setHighPriorityButtonContainer"
                app:layout_constraintBottom_toBottomOf="@id/setHighPriorityButtonContainer"
                app:layout_constraintEnd_toStartOf="@id/setHighPriorityButtonContainer"
                android:layout_marginEnd="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_delete_gray" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>