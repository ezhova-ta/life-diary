<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.lifediary.ui.calendar.CalendarDateViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ScreenContainer">

        <TextView
            android:id="@+id/title"
            style="@style/Text.ScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="16.08.2021"
            android:text="@{viewModel.title}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weatherForecastContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:booleanVisibility="@{viewModel.isWeatherForecastContainerVisible()}">

            <ImageView
                android:id="@+id/dayIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/icon_day_gray" />

            <TextView
                android:id="@+id/dayTemperatureView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/dayIcon"
                app:layout_constraintBottom_toBottomOf="@id/dayIcon"
                app:layout_constraintStart_toEndOf="@id/dayIcon"
                android:layout_marginStart="2dp"
                tools:text="+25째C"
                android:text='@{String.format("%s째C", viewModel.dayTemperatureForDate)}' />

            <ImageView
                android:id="@+id/nightIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintTop_toBottomOf="@id/dayIcon"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/icon_night_gray" />

            <TextView
                android:id="@+id/nightTemperatureView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/nightIcon"
                app:layout_constraintBottom_toBottomOf="@id/nightIcon"
                app:layout_constraintStart_toEndOf="@id/nightIcon"
                android:layout_marginStart="2dp"
                tools:text="+16째C"
                android:text='@{String.format("%s째C", viewModel.nightTemperatureForDate)}' />

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="@id/weatherForecastContainer"
                app:layout_constraintBottom_toBottomOf="@id/weatherForecastContainer"
                app:layout_constraintStart_toEndOf="@id/dayTemperatureView"
                android:layout_marginStart="8dp"
                tools:src="@drawable/icon_cloud_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>