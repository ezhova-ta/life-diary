<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.lifediary.adapters.PostAddressListAdapter.PostAddressListItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addressContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/controlsContainer"
            android:layout_marginEnd="8dp">
            <TextView
                android:id="@+id/addresseeNameView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/app_green"
                android:textSize="16sp"
                android:text="@{viewModel.address.name.empty ? @string/unknown_addressee : viewModel.address.name}"
                tools:text="Виталий Гудков" />

            <TextView
                android:id="@+id/streetView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/addresseeNameView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                tools:text="Литейный проспект"
                android:text="@{viewModel.address.street.empty ? @string/three_question_marks : viewModel.address.street}" />

            <TextView
                android:id="@+id/buildingNumberView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/streetView"
                app:layout_constraintBottom_toBottomOf="@id/streetView"
                app:layout_constraintStart_toEndOf="@+id/streetView"
                android:textSize="14sp"
                tools:text=", дом 63"
                android:text='@{String.format(", %s %s", @string/bld, viewModel.address.buildingNumber.empty ? @string/question_mark : viewModel.address.buildingNumber)}' />

            <TextView
                android:id="@+id/apartmentNumberView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/buildingNumberView"
                app:layout_constraintBottom_toBottomOf="@id/buildingNumberView"
                app:layout_constraintStart_toEndOf="@id/buildingNumberView"
                app:booleanVisibility="@{viewModel.apartmentViewVisible}"
                android:textSize="14sp"
                tools:text=", кв. 87"
                android:text='@{String.format(", %s %s", @string/apt, viewModel.address.apartmentNumber.empty ? @string/question_mark : viewModel.address.apartmentNumber)}' />

            <TextView
                android:id="@+id/cityView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/streetView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                tools:text="Санкт-Петербург"
                android:text="@{viewModel.address.city.empty ? @string/three_question_marks : viewModel.address.city}" />

            <TextView
                android:id="@+id/edgeRegionView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cityView"
                app:layout_constraintStart_toStartOf="parent"
                app:booleanVisibility="@{viewModel.edgeRegionViewVisible}"
                android:textSize="14sp"
                tools:text="Ленинградская область"
                android:text="@{viewModel.address.edgeRegion}" />

            <TextView
                android:id="@+id/postcodeView"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edgeRegionView"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                tools:text="191025"
                android:text="@{viewModel.address.postcode.empty ? @string/six_question_marks : viewModel.address.postcode}" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controlsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/addressContainer"
            app:layout_constraintBottom_toBottomOf="@id/addressContainer"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/icon_delete_red"
                android:background="@null" />

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/deleteButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_edit_blue"
                android:background="@null" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>