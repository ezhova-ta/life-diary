<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.LifeDiary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_green</item>
        <item name="colorPrimaryVariant">@color/app_light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/app_blue</item>
        <item name="colorSecondaryVariant">@color/app_light_blue</item>
        <item name="colorOnSecondary">@color/app_blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>