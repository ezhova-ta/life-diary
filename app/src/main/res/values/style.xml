<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.ScreenTitle">
        <item name="android:ellipsize">marquee</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Location">
        <item name="android:ellipsize">marquee</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.CalendarDay">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.CalendarMonth">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_green</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.MainControlsHint">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Substrate">
        <item name="android:padding">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScreenContainer">
        <item name="android:padding">16dp</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Input">
        <item name="android:padding">10dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/background_substrate_light_gray</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_blue</item>
        <item name="android:textColorHighlight">@color/app_light_blue</item>
    </style>

    <style name="MainScreenSticker">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/background_sticker</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>