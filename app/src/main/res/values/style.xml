<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/app_default_text_color</item>
    </style>

    <style name="Text.ScreenTitle">
        <item name="android:ellipsize">marquee</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.ScreenSubtitle" />

    <style name="Text.MediumGray">
        <item name="android:textColor">@color/app_medium_gray</item>
    </style>

    <style name="Text.SettingsTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="Text.SettingsScreenMenuItem">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Text.Link" />

    <style name="Text.Location">
        <item name="android:ellipsize">marquee</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Text.ProposedLocationButton">
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="Text.CalendarDay">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.CalendarMonth">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_green</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.CalendarWeekDay">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.MainControlsHint" />

    <style name="Text.ExplanatoryMessage">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ExplanatoryMessageIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Text.Substrate">
        <item name="android:padding">8dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScreenContainer">
        <item name="android:padding">16dp</item>
    </style>

    <style name="ScreenContainerWithoutTopPadding">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Input">
        <item name="android:padding">10dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/background_substrate_light_gray</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_blue</item>
        <item name="android:textColorHighlight">@color/app_light_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Input.Text">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="Text.MainScreenSection">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.MainScreenSection.Notes">
        <item name="android:background">@drawable/background_main_screen_notes_section</item>
    </style>

    <style name="Text.MainScreenSection.ShoppingList">
        <item name="android:background">@drawable/background_main_screen_shopping_list_section</item>
    </style>

    <style name="Text.MainScreenSection.PostAddresses">
        <item name="android:background">@drawable/background_main_screen_post_addresses_section</item>
    </style>

    <style name="Text.MainScreenSection.MemorableDates">
        <item name="android:background">@drawable/background_main_screen_memorable_dates_section</item>
    </style>

    <style name="Text.MainScreenSection.WomanSection">
        <item name="android:background">@drawable/background_main_screen_woman_section</item>
    </style>
</resources>